#!/usr/bin/bf/bf-withenv sh

set -euo pipefail


#======================================================================================================================
# Run preflight checks.
#======================================================================================================================

nu -c "use bf-unbound run ; run preflight"


#======================================================================================================================
# Start Unbound in daemon mode.
#======================================================================================================================

bf-x-as unbound unbound -c ${BF_UNBOUND_CONF} -d
