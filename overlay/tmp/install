#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Add Unbound user.
#======================================================================================================================

bf-adduser unbound


#======================================================================================================================
# Get Unbound version.
#======================================================================================================================

cd /tmp

VERSION=$(cat UNBOUND_BUILD)
bf-echo "Unbound version ${VERSION}."


#======================================================================================================================
# Install Unbound and dependencies.
#======================================================================================================================

bf-echo "Installing Unbound v${VERSION}..."
apk add --no-cache \
    drill \
    unbound=${VERSION}
bf-done


#======================================================================================================================
# Cleanup.
#======================================================================================================================

bf-done
