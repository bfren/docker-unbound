#!/usr/bin/nu

use bf

# Setup and install Unbound
def main [] {
    # add unbound user
    bf user add unbound

    # get unbound version and install
    cd /tmp
    let version = bf fs read ./UNBOUND_BUILD
    bf write $"Installing Unbound ($version)."
    do { apk add --no-cache $"unbound=($version)" } | ignore

    # install additional packages
    bf write "Installing additional packages"
    do { apk add --no-cache drill } | ignore
}
